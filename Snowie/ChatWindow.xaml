<Window x:Class="Snowie.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snowie"
        mc:Ignorable="d"
        Background="#36393f"
        Title="Snowie" 
        Height="450" Width="800" 
        MinHeight="350" MinWidth="500">
    <Grid>
        <DockPanel VerticalAlignment="Stretch" HorizontalAlignment="Center" Height="Auto">
            <Label Content="Connected to 192.168.1.12" Foreground="White" FontSize="36" HorizontalContentAlignment="Center" DockPanel.Dock="Top"/>

            <Border Background="#7289da" CornerRadius="10" Margin="40,0,40,100" VerticalAlignment="Stretch" Height="Auto" DockPanel.Dock="Right">
                <RichTextBox Background="Transparent" Margin="10,10" FontSize="16" Foreground="White" BorderThickness="0">

                </RichTextBox>
            </Border>
        </DockPanel>
        <Border Background="#7289da" CornerRadius="10" Margin="40,20" VerticalAlignment="Bottom" Height="50" DockPanel.Dock="Bottom">
                <TextBox Margin="10,0" FontSize="24" Foreground="White" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center"/>
            </Border>
    </Grid>
</Window>
